          "addressCountry": "BR"
        },
        "geo": {
          "@type": "GeoCoordinates",
          "latitude": -20.9103,
          "longitude": -46.9921
        },
        "openingHours": "Mo-Fr 08:00-18:00, Sa 08:00-12:00",
        "priceRange": "$$",
