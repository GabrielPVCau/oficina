---
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/Navbar.astro';
import { ServiceCard } from '../components/ServiceCard';

// Serviços - Foco em Oficina de Caminhões e Diesel
const services = [
  {
    iconName: "stethoscope" as const,
    title: "Reparo de Motor",
    description: "Conserto completo de motores diesel. Retífica, troca de peças, regulagem e tudo que seu caminhão precisa para voltar a funcionar."
  },
  {
    iconName: "pill" as const,
    title: "Manutenção Preventiva",
    description: "Acompanhamento regular da sua frota para evitar paradas. Troca de óleo, filtros, revisão de motor e sistema de injeção."
  },
  {
    iconName: "shield" as const,
    title: "Mecânica de Caminhões",
    description: "Serviços completos de motor diesel, suspensão, freios a ar, câmbio e diferencial. Seu caminhão em boas mãos."
  },
  {
    iconName: "handshake" as const,
    title: "Atendimento a Frotas",
    description: "Atendemos transportadoras e autônomos. Agilidade e qualidade para seu caminhão voltar à estrada."
  }
];

// Depoimentos reais do Google Maps
const testimonials = [
  {
    name: "G. Ney",
    text: "Faz 20 anos que vou aí, muito bom!!!",
    rating: 5
  },
  {
    name: "Eder G.",
    text: "Sou cliente há 5 anos, super recomendo. Ótima equipe!",
    rating: 5
  },
  {
    name: "Cliente desde 2016",
    text: "Vando é um bom mecânico e sou cliente há um ano.",
    rating: 5
  },
  {
    name: "Paulo Roberto",
    text: "Muito bom, recomendo!",
    rating: 5
  }
];
---

<Layout title="Oficina de Caminhões Vando Cau | Diesel | São Sebastião do Paraíso - MG">
  <Navbar />
  
  <!-- Spacer for fixed navbar -->
  <div class="h-16 md:h-20"></div>

  <!-- Hero Section -->
  <section id="inicio" class="section !pb-8 md:!pb-24 bg-gradient-to-b from-slate-50 to-white relative overflow-hidden">
    <div class="container">
      <div class="grid lg:grid-cols-2 gap-12 lg:gap-16 items-center">
        <!-- Content -->
        <div class="order-2 lg:order-1 text-center lg:text-left">
          <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold text-slate-900 mb-6 text-balance">
            Seu caminhão merece 
            <span class="text-teal-600">especialistas</span> 
            em diesel
          </h1>
          
          <p class="text-lg md:text-xl text-slate-600 mb-8 max-w-xl mx-auto lg:mx-0">
            Oficina especializada em caminhões e veículos diesel. Há mais de 20 anos mantendo sua frota na estrada com qualidade e confiança em São Sebastião do Paraíso.
          </p>
          
          <div class="flex flex-col sm:flex-row gap-4 justify-center lg:justify-start">
            <a href="https://wa.me/5535999750672?text=Ol%C3%A1.%20Preciso%20agendar%20um%20servi%C3%A7o%20pro%20meu%20caminh%C3%A3o." target="_blank" rel="noopener noreferrer" class="flex items-center justify-center gap-2 py-3.5 px-6 bg-teal-600 hover:bg-teal-700 text-white font-semibold rounded-lg transition-colors">
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
              </svg>
              Falar com a Mecânica
            </a>
            <a href="#sobre" class="flex items-center justify-center gap-2 py-3.5 px-6 border-2 border-slate-300 hover:border-teal-600 text-slate-700 hover:text-teal-600 font-semibold rounded-lg transition-colors">
              Conhecer a Oficina
            </a>
          </div>
          
          <!-- Diferenciais -->
          <div class="mt-10 pt-10 border-t border-slate-200">
            <!-- Grid para mobile e flex para desktop -->
            <div class="grid grid-cols-2 lg:flex lg:flex-wrap gap-x-4 gap-y-6 lg:gap-6 justify-items-center lg:justify-start">
              <div class="flex items-center gap-2 col-span-1">
                <div class="w-10 h-10 rounded-lg bg-teal-100 flex items-center justify-center text-teal-600 shrink-0">
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                  </svg>
                </div>
                <div class="text-left">
                  <p class="text-xs sm:text-sm font-semibold text-slate-900 leading-tight">+20 Anos em Diesel</p>
                  <p class="text-[10px] sm:text-xs text-slate-500">Desde 2002</p>
                </div>
              </div>
              <div class="flex items-center gap-2 col-span-1">
                <div class="w-10 h-10 rounded-lg bg-teal-100 flex items-center justify-center text-teal-600 shrink-0">
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                  </svg>
                </div>
                <div class="text-left">
                  <p class="text-xs sm:text-sm font-semibold text-slate-900 leading-tight">Especialistas em Caminhões</p>
                  <p class="text-[10px] sm:text-xs text-slate-500">Todas as marcas</p>
                </div>
              </div>
              <!-- Terceiro item centralizado no mobile (col-span-2) -->
              <div class="flex items-center gap-2 col-span-2 lg:col-span-1 justify-center lg:justify-start">
                <div class="w-10 h-10 rounded-lg bg-teal-100 flex items-center justify-center text-teal-600 shrink-0">
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z" />
                  </svg>
                </div>
                <div class="text-left">
                  <p class="text-xs sm:text-sm font-semibold text-slate-900 leading-tight">Atendimento Rápido</p>
                  <p class="text-[10px] sm:text-xs text-slate-500">Agilidade garantida</p>
                </div>
              </div>
            </div>
          </div>
        </div>
        
        <!-- Image -->
        <div class="order-1 lg:order-2 flex justify-center">
          <div class="relative">
            <!-- Decorative elements -->
            <div class="absolute -top-4 -left-4 w-24 h-24 bg-teal-100 rounded-full blur-2xl opacity-60"></div>
            <div class="absolute -bottom-4 -right-4 w-32 h-32 bg-teal-200 rounded-full blur-2xl opacity-60"></div>
            
            <!-- Image -->
            <div class="relative w-full max-w-xl aspect-video rounded-2xl overflow-hidden shadow-xl">
              <img 
                src="/oficina-hero.png" 
                alt="Oficina Mecânica Vando Cau - Fachada" 
                class="w-full h-full object-cover object-top"
              />
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Sobre Section -->
  <section id="sobre" class="section !pt-8 md:!pt-24 bg-white">
    <div class="container">
      <div class="grid lg:grid-cols-2 gap-12 lg:gap-20 items-center">
        <!-- Image -->
        <div class="relative">
          <div class="aspect-square max-w-md mx-auto rounded-2xl overflow-hidden shadow-lg">
            <img 
              src="/vando-cau.jpg" 
              alt="Vando Cau - Fundador da Oficina Mecânica" 
              class="w-full h-full object-cover object-top"
            />
          </div>
        </div>
        
        <!-- Content -->
        <div>
          <h2 class="text-3xl md:text-4xl font-bold text-slate-900 mb-6">
            Conheça o Vando Cau
          </h2>
          
          <div class="space-y-4 text-slate-600">
            <p>
              <strong>Vando Cau</strong> é mecânico especializado em caminhões e veículos diesel há mais de duas décadas. Fundou a <strong>Oficina Mecânica Vando Cau</strong> em agosto de 2002, em São Sebastião do Paraíso, Minas Gerais.
            </p>
            <p>
              Com paixão pelo que faz e dedicação aos seus clientes, Vando construiu uma reputação sólida na região. Sua oficina se tornou referência em <strong>manutenção e reparo de caminhões diesel</strong>, atendendo desde caminhoneiros autônomos até grandes transportadoras.
            </p>
            <p>
              Vando acredita que o sucesso está na <strong>experiência e dedicação</strong>. Cada cliente é tratado com respeito, e cada caminhão recebe o cuidado necessário para voltar à estrada com segurança.
            </p>
          </div>
          
          <!-- Credentials -->
          <div class="mt-8 grid grid-cols-2 gap-4">
            <div class="p-4 bg-slate-50 rounded-lg">
              <p class="text-sm text-slate-500 mb-1">Fundação</p>
              <p class="font-semibold text-slate-900">Agosto de 2002</p>
            </div>
            <div class="p-4 bg-slate-50 rounded-lg">
              <p class="text-sm text-slate-500 mb-1">WhatsApp</p>
              <p class="font-semibold text-slate-900">(35) 99975-0672</p>
            </div>
            <div class="p-4 bg-slate-50 rounded-lg">
              <p class="text-sm text-slate-500 mb-1">Especialidade</p>
              <p class="font-semibold text-slate-900">Caminhões Diesel</p>
            </div>
            <div class="p-4 bg-slate-50 rounded-lg">
              <p class="text-sm text-slate-500 mb-1">Localização</p>
              <p class="font-semibold text-slate-900">Jardim Industrial</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Serviços Section -->
  <section id="servicos" class="section bg-slate-50">
    <div class="container">
      <div class="text-center max-w-2xl mx-auto mb-12 md:mb-16">
        <span class="inline-block text-teal-600 font-medium text-sm uppercase tracking-wider mb-4">
          Nossos Serviços
        </span>
        <h2 class="text-3xl md:text-4xl font-bold text-slate-900 mb-4">
          Como podemos ajudar você
        </h2>
        <p class="text-slate-600">
          Serviços especializados em caminhões e veículos diesel com foco em qualidade e agilidade.
        </p>
      </div>
      
      <div class="grid sm:grid-cols-2 lg:grid-cols-4 gap-6">
        {services.map((service) => (
          <ServiceCard 
            client:load
            iconName={service.iconName}
            title={service.title}
            description={service.description}
          />
        ))}
      </div>
    </div>
  </section>

  <!-- Depoimentos Section -->
  <section id="depoimentos" class="section bg-white">
    <div class="container">
      <div class="text-center max-w-2xl mx-auto mb-12 md:mb-16">
        <span class="inline-block text-teal-600 font-medium text-sm uppercase tracking-wider mb-4">
          Experiências
        </span>
        <h2 class="text-3xl md:text-4xl font-bold text-slate-900 mb-4">
          O que dizem nossos clientes
        </h2>
        <p class="text-slate-600">
          Relatos de caminhoneiros e transportadoras que encontraram confiança e qualidade no cuidado com suas frotas.
        </p>
      </div>
      
      <div class="grid md:grid-cols-3 gap-6 lg:gap-8">
        {testimonials.map((testimonial) => (
          <article class="bg-slate-50 rounded-xl p-6 md:p-8 border border-slate-100">
            <!-- Stars -->
            <div class="flex gap-1 mb-4">
              {Array.from({ length: testimonial.rating }).map(() => (
                <svg class="w-5 h-5 text-amber-400" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                </svg>
              ))}
            </div>
            
            <!-- Text -->
            <p class="text-slate-600 mb-6 italic">
              "{testimonial.text}"
            </p>
            
            <!-- Author -->
            <div class="flex items-center gap-3">
              <div class="w-12 h-12 rounded-full bg-teal-100 flex items-center justify-center">
                <span class="text-teal-600 font-semibold">
                  {testimonial.name.charAt(0)}
                </span>
              </div>
              <div>
                <p class="font-semibold text-slate-900">{testimonial.name}</p>
                <p class="text-sm text-slate-500">Cliente</p>
              </div>
            </div>
          </article>
        ))}
      </div>
    </div>
  </section>

  <!-- Localização Section - NOVA SEÇÃO COM MAPA -->
  <section id="localizacao" class="section bg-slate-50">
    <div class="container">
      <div class="text-center max-w-2xl mx-auto mb-12 md:mb-16">
        <span class="inline-block text-teal-600 font-medium text-sm uppercase tracking-wider mb-4">
          Localização
        </span>
        <h2 class="text-3xl md:text-4xl font-bold text-slate-900 mb-4">
          Onde estamos
        </h2>
        <p class="text-slate-600">
          Venha nos visitar! Estamos localizados no Jardim Industrial, em São Sebastião do Paraíso - MG.
        </p>
      </div>
      
      <div class="grid lg:grid-cols-2 gap-8 items-center">
        <!-- Map -->
        <div class="rounded-2xl overflow-hidden shadow-lg h-80 lg:h-96">
          <iframe 
            src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3731.5!2d-46.9921!3d-20.9103!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x0%3A0x0!2zMjDCsDU0JzM3LjEiUyA0NsKwNTknMzEuNiJX!5e0!3m2!1spt-BR!2sbr!4v1703800000000!5m2!1spt-BR!2sbr&markers=color:red%7C-20.9103,-46.9921"
            width="100%" 
            height="100%" 
            style="border:0;" 
            allowfullscreen="" 
            loading="lazy" 
            referrerpolicy="no-referrer-when-downgrade"
            title="Localização da Oficina Mecânica Vando Cau - São Sebastião do Paraíso MG"
          ></iframe>
        </div>
        
        <!-- Address Info -->
        <div class="bg-white rounded-2xl p-8 shadow-lg">
          <h3 class="text-2xl font-bold text-slate-900 mb-6">
            Oficina de Caminhões Vando Cau
          </h3>
          
          <div class="space-y-4">
            <div class="flex items-start gap-4">
              <div class="w-12 h-12 rounded-lg bg-teal-100 flex items-center justify-center shrink-0">
                <svg class="w-5 h-5 text-teal-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
